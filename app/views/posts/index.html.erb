 
<% if user_signed_in? %>
<%= current_user.email %>

<%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete } %> 
<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
       <th scope="col">Title</th>
      <th scope="col">Body</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
       <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><% if can? :update, post %>
      <%= link_to "Edit this post", edit_post_path(post) %> 
       <%= link_to "Destroy this post", post, method: :delete %>
     <% end %>
  <%= link_to "Back to posts", posts_path %></td>
     </tr>
   <% end %>
  </tbody>
</table>
 
<%= link_to "New post", new_post_path %>
<% end %>


